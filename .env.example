# Discord Bot Configuration
TOKEN=your_discord_bot_token_here          # Your bot's token from Discord Developer Portal
CLIENT_ID=your_client_id_here              # Your application's client ID
GUILD_ID=your_guild_id_here                # Development server ID (required for dev environment)

# Environment Settings
NODE_ENV=development                       # development or production

# Logging Configuration
LOG_LEVEL=info                            # debug, info, warn, error
LOG_FORMAT=json                           # json or pretty
LOG_MAX_FILES=5                           # Maximum number of log files to keep
LOG_MAX_SIZE=5m                           # Maximum size of each log file